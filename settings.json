{
  "workbench.startupEditor": "newUntitledFile", // Abre um novo arquivo sem título ao iniciar o VS Code.
  "editor.fontSize": 15, // Define o tamanho da fonte do editor para 15.
  "editor.lineHeight": 1.8, // Define a altura da linha do editor para 1.8.
  "javascript.suggest.autoImports": true, // Ativa as sugestões automáticas de importações no JavaScript.
  "javascript.updateImportsOnFileMove.enabled": "always", // Atualiza as importações ao mover arquivos JavaScript.
  "editor.rulers": [80, 120], // Adiciona guias visuais nas colunas 80 e 120 no editor.
  "extensions.ignoreRecommendations": true, // Ignora as recomendações de extensões.
  "typescript.tsserver.log": "off", // Desativa o log do servidor TypeScript.
  "editor.stickyScroll.enabled": false, // Desativa a rolagem aderente no editor.
  "workbench.tree.enableStickyScroll": false, // Desativa a rolagem aderente na árvore do explorador.
  "files.associations": { // Define associações de arquivos para tipos específicos.
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "css",
    ".dev.vars": "dotenv"
  },
  "symbols.files.associations": { // Define associações de arquivos para símbolos específicos.
    "*.module.ts": "nest",
    "*.guard.ts": "typescript",
    "*.spec.ts": "ts-test",
    "*.e2e-spec.ts": "ts-test",
    "*.mock.ts": "ts-test",
    "vitest.config.e2e.ts": "vite",
    ".env.development.local": "gear",
    ".env.test.local": "gear",
    ".env.local": "gear",
    ".env.example": "gear"
  },
  "tailwindCSS.experimental.classRegex": [ // Define regex para classes experimentais do Tailwind CSS.
    ["tv\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    "class:\\s*?[\"'`]([^\"'`]*).*?,"
  ],
  "editor.parameterHints.enabled": false, // Desativa as dicas de parâmetros no editor.
  "editor.renderLineHighlight": "gutter", // Realça a linha atual no gutter (margem esquerda).
  "cSpell.language": "en,pt", // Define os idiomas para a verificação ortográfica (inglês e português).
  "typescript.updateImportsOnFileMove.enabled": "always", // Atualiza as importações ao mover arquivos TypeScript.
  "editor.suggestSelection": "first", // Seleciona a primeira sugestão automaticamente.
  "explorer.confirmDelete": false, // Desativa a confirmação ao excluir arquivos no explorador.
  "gitlens.codeLens.recentChange.enabled": false, // Desativa a exibição das alterações recentes no GitLens.
  "terminal.integrated.showExitAlert": false, // Desativa o alerta de saída do terminal integrado.
  "[prisma]": { // Configuração específica para arquivos Prisma.
    "editor.formatOnSave": true
  },
  "typescript.suggest.autoImports": true, // Ativa as sugestões automáticas de importações no TypeScript.
  "typescript.preferences.preferTypeOnlyAutoImports": true, // Prefere importações automáticas de tipo apenas no TypeScript.
  "terminal.integrated.env.osx": { // Configurações de ambiente do terminal integrado no macOS.
    "FIG_NEW_SESSION": "1"
  },
  "workbench.editor.labelFormat": "short", // Usa um formato curto para rótulos de editor na área de trabalho.
  // "editor.fontLigatures": true, // (Comentado) Ativa as ligaduras de fonte no editor.
  "emmet.includeLanguages": { // Inclui o Emmet para linguagens específicas.
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": { // Define perfis de sintaxe do Emmet.
    "javascript": "jsx"
  },
  "cSpell.enableFiletypes": [ // Desativa a verificação ortográfica para tipos de arquivos específicos.
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!latex",
    "!php",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scss"
  ],
  "editor.acceptSuggestionOnCommitCharacter": false, // Desativa a aceitação de sugestões com caracteres de confirmação.
  "explorer.compactFolders": false, // Desativa a exibição compacta de pastas no explorador.
  "git.enableSmartCommit": true, // Ativa o commit inteligente no Git.
  "editor.accessibilitySupport": "off", // Desativa o suporte a acessibilidade no editor.
  "explorer.confirmDragAndDrop": false, // Desativa a confirmação ao arrastar e soltar no explorador.
  "terminal.integrated.fontSize": 14, // Define o tamanho da fonte do terminal integrado para 14.
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font", // Define a família de fontes do terminal integrado.
  "editor.codeActionsOnSave": { // Define ações de código a serem executadas ao salvar.
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [ // Valida arquivos específicos com ESLint.
    "javascript",
    "javascriptreact",
    "graphql"
  ],
  "editor.semanticHighlighting.enabled": false, // Desativa o destaque semântico no editor.
  "breadcrumbs.enabled": false, // Desativa os breadcrumbs no editor.
  "workbench.productIconTheme": "fluent-icons", // Define o tema de ícones do produto como "fluent-icons".
  "editor.fontFamily": "JetBrains Mono", // Define a família de fontes do editor.
  "gitlens.codeLens.authors.enabled": false, // Desativa a exibição de autores no GitLens.
  "editor.tabSize": 2, // Define o tamanho da tabulação como 2 espaços.
  "security.workspace.trust.untrustedFiles": "newWindow", // Abre arquivos não confiáveis em uma nova janela.
  "files.exclude": { // Exclui arquivos e pastas específicos do explorador.
    "**\/CVS": true,
    "**\/.DS_Store": true,
    "**\/.hg": true,
    "**\/.svn": true,
    "**\/.git": true,
    ".vscode": true
    // "node_modules": true
  },
  "workbench.iconTheme": "symbols", // Define o tema de ícones da área de trabalho como "symbols".
  "update.mode": "default", // Define o modo de atualização como padrão.
  "terminal.integrated.gpuAcceleration": "on", // Ativa a aceleração GPU no terminal integrado.
  "terminal.integrated.defaultProfile.osx": "fish", // Define o perfil padrão do terminal no macOS como "fish".
  "[jsonc]": { // Configuração específica para arquivos JSONC.
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": { // Configuração específica para arquivos JSON.
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "window.commandCenter": false, // Desativa o centro de comandos na janela.
  "git.openRepositoryInParentFolders": "always", // Abre repositórios Git em pastas pai sempre.
  "symbols.hidesExplorerArrows": false, // Não esconde as setas do explorador de símbolos.
  "[javascript]": { // Configuração específica para arquivos JavaScript.
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "console-ninja.featureSet": "Community", // Define o conjunto de recursos do Console Ninja como "Community".
  "workbench.editor.empty.hint": "hidden", // Oculta a dica de editor vazio na área de trabalho.
  "update.showReleaseNotes": false, // Não mostra notas de lançamento após atualizações.
  "security.promptForLocalFileProtocolHandling": false, // Não solicita ao lidar com protocolos de arquivos locais.
  "workbench.activityBar.location": "hidden", // Oculta a barra de atividades na área de trabalho.
  "apc.activityBar": { // Configurações da barra de atividades para a extensão "apc".
    "position": "bottom",
    "hideSettings": true,
    "size": 48,
    "itemMargin": 8,
    "itemSize": 32
  },
  "editor.hideCursorInOverviewRuler": true, // Oculta o cursor na régua de visão geral.
  "editor.minimap.enabled": false, // Desativa a miniatura do código no editor.
  "window.titleBarStyle": "native", // Define o estilo da barra de título da janela como nativo.
  "apc.electron": { // Configurações do Electron para a extensão "apc".
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 11,
      "y": 10
    },
    "opacity": 1,
    "vibrancy": "dark",
    "frame": false
  },
  "apc.header": { // Configuração do cabeçalho para a extensão "apc".
    "height": 36
  },
  "apc.listRow": { // Configuração das linhas da lista para a extensão "apc".
    "height": 24
  },
  "apc.font.family": "Inter", // Define a família de fontes para a extensão "apc".
  "apc.stylesheet": { // Estilos personalizados para a extensão "apc".
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none",
    ".nosidebar .inline-tabs-placeholder": "width: 75px",
    ".pane-header": "padding: 0 8px",
    ".pane-body": "padding: 8px",
    ".split-view-view:first-child .pane-header": "display: none !important;",
    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;"
  },
  "editor.scrollbar.vertical": "hidden", // Oculta a barra de rolagem vertical no editor.
  "explorer.sortOrder": "foldersNestsFiles", // Ordena o explorador por pastas, aninhamentos e arquivos.
  "explorer.fileNesting.patterns": { // Define padrões de aninhamento de arquivos no explorador.
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-*, bun.lockb, nest*, package-lock*",
    "tailwind.config.*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "explorer.fileNesting.enabled": true, // Ativa o aninhamento de arquivos no explorador.
  "workbench.statusBar.visible": false, // Oculta a barra de status na área de trabalho.
  "editor.tokenColorCustomizations": { // Personalizações de cores de tokens no editor.
    "textMateRules": []
  },
  "workbench.layoutControl.enabled": false, // Desativa o controle de layout na área de trabalho.
  "workbench.colorTheme": "Catppuccin Latte" // Define o tema de cores da área de trabalho como "Catppuccin Latte".
}
